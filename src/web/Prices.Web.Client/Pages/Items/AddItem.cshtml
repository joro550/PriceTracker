@page "/item/add"
@inherits AddItemComponent

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
    <h1 class="h2">Items</h1>
</div>
<div>
    <div class="form-group row">
        <label for="@ItemModel.Id" class="col-sm-2 col-form-label">Id</label>
        <div class="col-sm-10">
            <input class="form-control" placeholder="Enter item id" bind="@ItemModel.Id"/>
        </div>
    </div>
    
    <div class="form-group row">
        <label for="@ItemModel.Retailer" class="col-sm-2 col-form-label">Retailer</label>
        <div class="col-sm-10">
            <select id="select-box" class="form-control" bind="@ItemModel.Retailer">
                @foreach (var retailer in ItemModel.RetailerList)
                {
                    <option value="@retailer.Value">@retailer.Text</option>
                }
            </select>
        </div>
    </div>
    
    <div class="form-group row">
        <label for="@ItemModel.Category" class="col-sm-2 col-form-label">Category</label>
        <div class="col-sm-10">
            <input class="form-control" placeholder="Enter item retailer" bind="@ItemModel.Category"/>
        </div>
    </div>
    <button class="btn btn-primary" onclick="@(async () => await AddItem())">Submit</button>
</div>